<div class="item">
                <div>Professor</div>
                <div><input type="text" name="name" placeholder="Nome completo" value="{{teacher.name}}"></div>
            </div>
            <div class="item">
                <div>Data de nascimento</div>
                <div> <input type="date" name="birth" value="{{teacher.birth}}"> </div>
            </div>
            <div class="item">
                <div>Escolaridade</div>
                <div><select name="graduation" id="select">
                    <option value="Ensino Médio Completo" {% if teacher.graduation == "Ensino Médio Completo" %} selected {% endif %}>Ensino Médio Completo</option>
                    <option value="Ensino Superior Completo"{% if teacher.graduation == "Ensino Superior Completo" %} selected {% endif %}>Ensino Superior Completo</option>
                    <option value="Mestrado"{% if teacher.graduation == "Mestrado" %} selected {% endif %}>Mestrado</option>
                    <option value="Doutorado"{% if teacher.graduation == "Doutorado" %} selected {% endif %}>Doutorado</option>
                </select></div>
            </div>
            <div class="item">
                <div>Tipo de aula</div>
                <div><input type="radio" name="classType" value="Presencial" {% if teacher.classType == "Presencial" %} checked
                {% endif %}><span>Presencial</span> 
                <input type="radio" name="classType" value="Distancia" {% if teacher.classType == "Distancia" %} checked
                {% endif %}><span>Distância</span></div>
            </div>
            <div class="item">
                <div>Matérias que ensina</div>
                <div> <input type="text" name="subjects" placeholder="Separe as materias por ','" value="{{teacher.subjects}}"></div>
            </div>
            <div class="item">
                <div>Foto</div>
                <div><input type="text" name="avatar_url" placeholder="HTTP://" value="{{teacher.avatar_url}}"></div>
            </div>
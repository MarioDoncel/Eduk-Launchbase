{% extends 'layout.njk' %}

{% block content %}
    
    <div class="card table-container">
        <a href="/students/create"> Cadastrar novo aluno</a>
        <table width="100%">
            <thead>
                <th>Nome completo</th>
                <th>Email</th>
                <th>Ano escolar</th>
                <th>Ação</th>
            </thead>
            <tbody>
                {% for student in students %}
                <tr>
                    <td>
                        <span class="avatar" style="background-image: url({{student.avatar_url}})"></span>
                        {{student.name}}
                    </td>
                    <td> 
                        {{student.email}}
                    </td>
                    <td> 
                        {{student.grade}}
                    </td>
                    <td> <a href="/students/{{student.id}}"> Detalhar</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}